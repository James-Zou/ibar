<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
	
    <!-- 角的弧度 -->
    <corners android:radius="6dp" />
    <!-- 边框 -->
    <stroke
        android:width="1dp"
        android:color="@color/baseColor_wathet" />

    <!-- 边距 -->
    <padding
        android:bottom="8dp"
        android:left="10dp"
        android:right="10dp"
        android:top="8dp" >
    </padding>

    <!-- 背景色 -->
    <solid android:color="@color/baseColor_gray" />

</shape>